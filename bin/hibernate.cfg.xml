<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD
3.0//EN" "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
	<session-factory>
		<property name="connection.driver_class">com.mysql.jdbc.Driver</property>
		<property name="connection.url">jdbc:mysql://localhost/demostock</property>
		<property name="connection.username">root</property>
		<property name="connection.password">root</property>
		<property name="connection.pool_size">1</property>
		<property name="dialect">org.hibernate.dialect.MySQLDialect</property>
		<property name="show_sql">false</property> <!-- en true muestra hql en consola -->
		<!--Mapeo Entidades -->


		<!-- Mapeo de Entidades -->
		<mapping resource="mapeos/Persona.hbm.xml" />
	 	<mapping resource="mapeos/Local.hbm.xml" />
		<mapping resource="mapeos/Lote.hbm.xml" />
		<mapping resource="mapeos/Producto.hbm.xml" />
		

	<!--	<mapping resource="mapeos/MedidorAlta.hbm.xml" />
		<mapping resource="mapeos/Persona.hbm.xml" />-->



	</session-factory>
</hibernate-configuration>




