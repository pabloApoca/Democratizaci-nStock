<?xml version = "1.0" encoding = "UTF-8" ?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" >
<hibernate-mapping>
	<class name="datos.Lote" table="lote">
		<id column="idLote" name="idLote">
			<generator class="identity" />
		</id>
		
		<property column="cantidad" name="cantidad" type="int" />
		<property column="fechaIngreso" name="fechaIngreso" type="LocalDate" />		

		<many-to-one name="local" class="datos.Local" column="idLocal" not-null="true" />
		
		<set name="productos" table="producto" order-by="idProducto asc" inverse="true" lazy="true" fetch="select">
			<key column="idLote" not-null="true"/>
			<one-to-many class="datos.Producto" />
		</set>
		
	</class>
</hibernate-mapping>